<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toast_ll"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp28"
        android:paddingEnd="@dimen/dp28"
        android:background="@drawable/shape_4c4c4c_bg"
        android:gravity="center"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/toast_img"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:layout_marginTop="@dimen/dp17"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/toast_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp14"
        android:src="@mipmap/ic_launcher"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp19"
        android:text="9sp"
        tools:text="1111"/>

    </LinearLayout>
</LinearLayout>