<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_hour_minute"
        tools:text="09:36"
        android:layout_marginRight="@dimen/dp7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp23" />
    <TextView
        android:id="@+id/tv_week"
        android:layout_toRightOf="@+id/tv_hour_minute"
        tools:text="星期三"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_date"
        android:layout_toRightOf="@+id/tv_hour_minute"
        tools:text="2019-05-28"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp7"
        android:layout_alignBottom="@+id/tv_hour_minute"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>